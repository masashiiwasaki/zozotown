%tr
  %td.photo
    = link_to item_path(cart.item_list.item) do
      = image_tag(cart.item_list.item.images.first.image_url,alt: "商品画像",width:"125",height:"150")
  %td.detail
    %p #{cart.item_list.item.shop.name}
    %p #{cart.item_list.item.name}
    %p カラー : #{cart.item_list.color.color}
    %p サイズ : #{cart.item_list.size.size}
  %td.price
    ¥#{cart.item_list.item.proposed_price}
  %td.fluctuation
    数量: #{cart.quantity}
    = link_to "削除", "/carts/#{cart.id}", method: :delete
