#gblHeaderStuck
  .header#gblHeader
    #hWrapper
      #hWrapperInner
        #header.clearfix
          .clearfix#hHeader
            %h1#hLogo
              = link_to "ZOZOTOWN", "http://zozo.jp/"
            #hItemSearch.clearfix
              %form#searchForm{name:"keyword"}
                %p#hKeyword
                  %input#searchText.def{type:"text",name:"p_keyv",placeholder:"何かお探しですか？",autocomplete:"off"}
                %p#hSubmit.hBtn
                  %input#searchSubmitBtn{title:"検索",type:"submit"}
              #suggest
          .clearfix#hCtrl
            %ul.clearfix#hCtrlList
              %li.hPopWrap.static#hUserName
                %p#hThumbs
                  %span#hName
                    %span.userName.textTruncate ああああ様
              %li.hPopWrap.static#hNotice
                = link_to "/notice/" do
                  %span.ico.ico_notice
                    %span 通知機能
              %li#hFavoriteLink.static.hPopWrap
                = link_to "/_member/favoritelist/" do
                  %span#hFavorite.ico.ico_favorite
                    %span お気に入り
              %li#hCart
                %span.clearfix
                  = link_to "/carts" do
                    %span.ico.ico_cart
                      %span カート
              %li#hServiceMap.static.hPopWrap
                %span.ico.ico_siteMap
                  %span サイトマップ
